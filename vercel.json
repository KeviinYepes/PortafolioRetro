{
  "version": 2,
  "builds": [
    {
      "src": "pt_retro/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
      }
    },
    {
      "src": "portfolio/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "portfolio/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "pt_retro/wsgi.py"
    }
  ]
}